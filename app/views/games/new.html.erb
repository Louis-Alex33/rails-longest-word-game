<h1 class="mb-4">New Game</h1>

<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item p-3 border rounded fs-3">
      <%= letter %>
    </li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false" class="mt-4">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join(" ") %>

  <input type="text" name="word" class="form-control mb-3" placeholder="Your word">
  <input type="submit" value="Play" class="btn btn-primary">
</form>
